<div class="lists-body">
  <br>
  <div class="title">
    <h1>All Your Lists</h1>
  </div>

  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-movie">
        <div class="card-img">

          <img src="<%= asset_path('banner.jpg')%>"/>
        </div>
        <div class="card-trip-infos">
          <h3><%= list.name %></h3>
          <p>Short description here!</p>
          <p><%= link_to 'See', list, :style=>'color: black; text-decoration: none; font-family: "Limelight";' %> <%= link_to 'Update', edit_list_path(list), :style=>'color: black; text-decoration: none; font-family: "Limelight";' %> <%= link_to 'Delete', list_path(list), method: :delete, data: { confirm: "Are you sure?" }, :style=>'color: black; text-decoration: none; font-family: "Limelight";' %></p>
        </div>
      </div>
    <% end %>
  </div>

  <br>
  <%= link_to 'Create a new list', new_list_path, class: "btn-new" %>
</div>
